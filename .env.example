# Example environment variables for Spot AI Agent

# Local LLM fallback configuration
OLLAMA_URL=https://ollama-render-7rfu.onrender.com
MODEL_ID=llama3.2:3b
OLLAMA_TIMEOUT=120
OLLAMA_CONCURRENCY=1

EMAIL_ADDRESS=your_email@example.com
EMAIL_PASSWORD=your_password
EMAIL_RECEIVER=recipient@example.com
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
SIZE_AS_NOTIONAL=true
RUN_DASHBOARD=1
TRADE_HISTORY_FILE=/home/ubuntu/spot_data/trades/completed_trades.csv

# News risk halting defaults
NEWS_RISK_MODE=classed
NEWS_CRYPTO_SYS_HALT_MINS=120
NEWS_USD_T1_HALT_MINS=30
NEWS_REHALT_SUPPRESS_WINDOW_MINS=240

